<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="b-page" id="game">
        <div class="b-page__header" id="header">
            <h2>Tic tac toe</h2>
            <div class="g-names">
                <h4 class="g-center">
                    <span id="you" class="g-you"> </span>
                    <span><div class="g-yourSquare"> </div></span>
                    <span>VS</span>
                    <span id="opponent" class="g-opponent"> </span>
                    <span><div class="g-oppSquare"> </div></span>
                </h4>
            </div>
        </div>
        <div class="b-game">
            <canvas id="gameCanvas" width="600" height="600"> </canvas>
        </div>
        <div class="b-menu">
            <a class="b-menu__link" id="chat">Chat</a>
            <a class="b-menu__link" id="main" href="#menu">Main menu</a>
        </div>
    </div>
</fest:template>

