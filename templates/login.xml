<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="login" class="b-page">
        <div class="b-page__header" id="header">
            <h2>Login</h2>
        </div>
        <form class="b-form" id="loginForm">
            <div class="b-row">
                <div class="input-field b-form__row">
                    <p>Login</p>
                    <input id="loginInput" type="text" placeholder="1-16 symbols"/>
                    <span class="b-form__error" id="loginError"> </span>
                </div>
            </div>
            <div class="b-row">
                <div class="input-field b-form__row">
                    <p>Password</p>
                    <input id="passwordInput" type="password" placeholder="1-16 symbols"/>
                    <span class="b-form__error" id="passwordError"> </span>
                </div>
            </div>
            <div class="b-row b-form__button--center">
                <button class="b-button" type="submit" id="loginSubmit">
                    Login
                </button>
            </div>
        </form>
        <div class="b-row">
            <a class="b-button b-form__button--left" id="register" href="#register">Register</a>
            <a class="b-button b-form__button--right" id="main" href="#">Main menu</a>
        </div>
    </div>
</fest:template>
